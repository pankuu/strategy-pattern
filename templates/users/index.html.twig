{% extends 'base.html.twig' %}

{% block title %}Users list!{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    <link rel="stylesheet" href="{{ asset('css/account.css') }}">
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="user-main mb-5 pb-3">
                    <h1 class="text-left mt-2">Users list!</h1>
                    {% for user in users %}
                        <div class="user-container my-1">
                            <img class="user-img" src="{{ asset(user.image) }}">
                            <div class="user-title d-inline-block pl-3 align-middle">
                                <span>{{ user.firstName }}</span>
                                <br>
                                <small>email:
                                <span class="align-left user-details">{{ user.email }}</span></small>
                                <small>age:
                                <span class="align-right user-details">{{ user.age }}</span></small>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
